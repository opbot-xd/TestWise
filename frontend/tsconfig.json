{
    "compilerOptions": {
      "target": "es5",                       /* Specify ECMAScript target version */
      "module": "commonjs",                  /* Specify module code generation */
      "strict": true,                        /* Enable all strict type-checking options */
      "esModuleInterop": true,               /* Enables emit interoperability between CommonJS and ES Modules */
      "jsx": "react",                        /* Specify JSX as the transpilation target */
      "outDir": "./dist",                    /* Redirect output structure to the directory */
      "baseUrl": "./src",                    /* Base directory to resolve non-relative module names */
      "paths": {
        "*": ["types/*"]                     /* Path mapping for module resolution */
      },
      "strictNullChecks": true               /* Enable strict null checks */
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],     /* Specify files to include for compilation */
    "exclude": ["node_modules"]                      /* Specify files to exclude from compilation */
      
}


  